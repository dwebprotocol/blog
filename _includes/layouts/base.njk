<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-themes/prism-base16-ateliersulphurpool.light.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/font-awesome/css/fontawesome.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/font-awesome/css/brands.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/fonts/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <div class="wrapper">
      <header>
        <a href="https://hypercore-protocol.org">
          <img src="{{ '/img/hypercore-protocol.png' | url }}" class="logo"></img>
        </a>
        <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        <ul class="social">
          {% for icon in socialIcons %}
            <li>
              <a href="{{ icon.url }}">
                <i class="{{ icon.classes }}" alt="{{ icon.alt }}"></i>
              </a>
            </li>
          {% endfor %}
        </ul>
      </header>

      <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <footer></footer>

      <!-- Current page: {{ page.url | url }} -->
    </div>
  </body>
</html>
